---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<h1 class="section-heading">
  {title}
</h1>

<style>
  .section-heading {
    font-family: "Rethink Sans", sans-serif;
    color: var(--primary-white);
  }
  
  h1 {
    font-size: 2rem;
    font-weight: 700;
  }

  h1::after {
    content: "";
    display: block;
    width: 100%;
    height: 1px;
    background-color: var(--primary-white);
    margin-block: 0.5rem;
    opacity: 0.5;
  }
</style>
