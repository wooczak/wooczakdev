---
import SectionHeading from "../components/SectionHeading.astro";
---

<section id="latest-blog-posts">
  <SectionHeading title="Latest blog posts" />
  <slot />
  <button>Show all posts</button>
</section>

<style>
  #latest-blog-posts {
    font-family: "Rethink Sans", sans-serif;
    color: var(--primary-white);
    margin-top: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  button {
    background-image: var(--main-white);
    color: var(--primary-black);
    font-size: 1rem;
    font-weight: 600;
    padding-block: 1rem;
    margin-top: 0.5rem;
    border: none;
    border-radius: 0.5em;
    cursor: pointer;
    transition: background-color 0.3s;
  }
</style>
